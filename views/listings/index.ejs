<%layout ('./layouts/boilerplate') %>
<body>
  <!-- Category Icons and Tax Toggle -->
  <div class="d-flex align-items-start mb-4 gap-3 mt-5" style="width: 100%;">
    <!-- Category Icons - 60% width -->
    <div class="d-flex justify-content-between align-items-center flex-wrap" style="width: 60%; gap: 0.5rem;">
      <a href="/listings?category=trending" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-fire fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Trending</small>
        </div>
      </a>
      <a href="/listings?category=rooms" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-bed fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Rooms</small>
        </div>
      </a>
      <a href="/listings?category=cities" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-city fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Cities</small>
        </div>
      </a>
      <a href="/listings?category=beach" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-umbrella-beach fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Beach</small>
        </div>
      </a>
      <a href="/listings?category=mountain" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-mountain fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Mountain</small>
        </div>
      </a>
      <a href="/listings?category=pool" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-swimming-pool fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Pool</small>
        </div>
      </a>
      <a href="/listings?category=camping" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-campground fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Camping</small>
        </div>
      </a>
      
      <a href="/listings?category=treehouse" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-tree fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Treehouse</small>
        </div>
      </a>
      <a href="/listings?category=cabin" class="text-decoration-none text-dark text-center" style="flex: 0 0 auto;">
        <div class="d-flex flex-column align-items-center">
          <i class="fas fa-home fa-lg mb-2" style="color: #666;"></i>
          <small class="text-muted">Cabin</small>
        </div>
      </a>
     
    </div>

    <!-- Gap - Flexible -->
    <div class="flex-grow-1"></div>

    <!-- Tax Toggle Switch - Auto width -->
    <div class="form-check form-switch d-flex align-items-center border rounded p-2" style="background-color: #f8f9fa; white-space: nowrap; flex-shrink: 0;">
      <label class="form-check-label me-3 mb-0" for="taxToggle" style="color: #333; font-size: 0.9rem;">
        Show tax
      </label>
      <input class="form-check-input flex-shrink-0" type="checkbox" role="switch" id="taxToggle" style="width: 2.5rem; height: 1.25rem; cursor: pointer; margin-left: 0;">
    </div>
  </div>

  <% if (allListings && allListings.length > 0) { %>
    
    <ul class="list-unstyled">
      <div class="row row-cols-lg-3 ">
      <% for (let listing of allListings) { %>
        <li >
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card card border-0 shadow-none bg-transparent" style="width: 18rem;">
                 <img src="<%= listing.image && listing.image.path ? (listing.image.path.startsWith('http') ? listing.image.path : '/' + listing.image.path) : 'https://via.placeholder.com/300' %>" class="card-img-top" alt="...">
               <div class="card-body">
                     <h5 class="card-title mb-0"><%= listing.title %></h5>
                     <h6 class="fw-semibold mb-0 price-display" data-price="<%= listing.price %>" style="color: #fe424d;">
                          $<span class="base-price"><%= listing.price %></span>
                     </h6>
                          <h6 ><%= listing.location %></h6>
             </div>
            </div>
          </a>
        </li>
      <% } %>
       </div>
    </ul>
   
  <% } else { %>
    <p>No listings available at the moment.</p>
  <% } %>

  <script>
    // Tax toggle functionality
    document.addEventListener('DOMContentLoaded', function() {
      const taxToggle = document.getElementById('taxToggle');
      const priceDisplays = document.querySelectorAll('.price-display');
      
      // Generate random tax percentage between 8% and 15%
      function getRandomTax() {
        return (Math.random() * 7 + 8).toFixed(2); // 8% to 15%
      }
      
      function updatePrices() {
        priceDisplays.forEach(priceDisplay => {
          const basePrice = parseFloat(priceDisplay.getAttribute('data-price'));
          const basePriceSpan = priceDisplay.querySelector('.base-price');
          
          if (taxToggle.checked) {
            const taxPercent = getRandomTax();
            const taxAmount = (basePrice * taxPercent / 100).toFixed(2);
            const totalPrice = (basePrice + parseFloat(taxAmount)).toFixed(2);
            
            basePriceSpan.innerHTML = `${totalPrice} <small class="text-muted">(+$${taxAmount} tax)</small>`;
          } else {
            basePriceSpan.textContent = basePrice;
          }
        });
      }
      
      taxToggle.addEventListener('change', updatePrices);
    });
  </script>
</body>

